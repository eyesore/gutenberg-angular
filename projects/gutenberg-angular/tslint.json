{
  "extends": "../../tslint.json",
  "rules": {
    "directive-selector": [
      true,
      "attribute",
      "pgl",
      "camelCase"
    ],
    "component-selector": [
      true,
      "element",
      "pgl",
      "kebab-case"
    ],
    "variable-name": false
  },
  "linterOptions": {
    "exclude": [
        "**/*.spec.ts",
        "**/testing/*"
    ]
  }
}
